{{# if products }}
 <div class="row">
	<div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
	  <ul class="list-group">
	    {{# each products }}
		<li class="list-group-item">
		  <span class="badge">{{ this.qty }}</span>
		  <strong> {{ this.item.title }} </strong>
		  <span id='{{@index }}' class="label label-success"> &#8377; {{this.price }}</span>
<script> var price ={{this.price}}+'';
         if(price.length>3){
         var lastThree = price.substring(price.length-3);
         var otherNumbers = price.substring(0,price.length-3);
         if(otherNumbers != '')
                lastThree= ',' +lastThree;
         var res = otherNumbers.replace(/\B(?=(\d{2})+(?!\d))/g,",") + lastThree;
         document.getElementById('{{@index }}').innerHTML='&#8377; '+res;}</script>

		
</li>
		{{/each}}
	</ul>
	</div>
	</div>
<div class="row">
 <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
	<strong id='price'> Total:&#8377; {{ totalPrice }}</strong>

<script> var price ={{totalPrice}}+'';
         if(price.length>3){
         var lastThree = price.substring(price.length-3);
         var otherNumbers = price.substring(0,price.length-3);
         if(otherNumbers != '')
                lastThree= ',' +lastThree;
         var res = otherNumbers.replace(/\B(?=(\d{2})+(?!\d))/g,",") + lastThree;
         document.getElementById('price').innerHTML='Totalprice &#8377; '+res;}</script>
	</div> 
</div>
<hr>
<div class="row">
 <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">

 <a href="/checkout"  class="btn btn-success btn-lg active" role="button">Check out</a>
 
	
        
    </div>
</div>
{{ else }}
<div class="row">
 <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <h2> No Items in Cart </h2>
        </div>
</div>

{{/if}}

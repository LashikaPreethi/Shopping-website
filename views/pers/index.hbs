<div class="page-header">Personal care<div>
<div class="row">

  </div>
{{# each products}}
<div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <img src="{{ imagePath }}" class="img-responsive">
      <div class="caption">
        <h3> {{ title }}</h3>
        <div class="clearfix">

        <div id='{{_id}}' class="price">&#8377;{{ price }} </div>
<script> var price ={{price}}+'';
	 if(price.length>3){
	 var lastThree = price.substring(price.length-3);
	 var otherNumbers = price.substring(0,price.length-3);
	 if(otherNumbers != '')
		lastThree= ',' +lastThree;
	 var res = otherNumbers.replace(/\B(?=(\d{2})+(?!\d))/g,",") + lastThree;
         document.getElementById('{{ _id }}').innerHTML='&#8377; '+res;}</script>
	<a href="/addtopcart/{{ this._id}}" class="btn btn-primary pull-right   " role="button">Add to cart</a>
	
</div>
</div>
</div>
    </div>

{{/each}}
 </div>

